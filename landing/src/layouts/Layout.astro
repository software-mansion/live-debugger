---
import "../styles/global.css";
import { Font } from "astro:assets";
import { Header } from "@/components/ui/Header";
import { Footer } from "@/components/ui/Footer";

export interface Props {
  title: string;
}
---

<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" type="image/svg+xml" href="/live-debugger/favicon.svg" />
    <title>LiveDebugger: LiveView debugging made simple</title>
    <meta
      name="description"
      content="A must-have tool for Elixir developers. See your LiveComponents tree, inspect assigns, trace and filter callback executions, and more."
    />
    <Font cssVariable="--font-aeonik" preload />
    {/* Google tag - analytics */}
    <script
      is:inline
      set:html={`  
      (function (w, d, s, l, i) {
        w[l] = w[l] || [];
        w[l].push({ "gtm.start": new Date().getTime(), event: "gtm.js" });
        var f = d.getElementsByTagName(s)[0],
          j = d.createElement(s),
          dl = l != "dataLayer" ? "&l=" + l : "";
        j.async = true;
        j.src = "https://www.googletagmanager.com/gtm.js?id=" + i + dl;
        f.parentNode.insertBefore(j, f);
      })(window, document, "script", "dataLayer", "GTM-PMLFF7CX");
    `}
    />
    {/* Google tag - consent */}
    <script
      is:inline
      set:html={`  
      (function (w, d, s, l, i) {
        w[l] = w[l] || [];
        w[l].push({ "gtm.start": new Date().getTime(), event: "gtm.js" });
        var f = d.getElementsByTagName(s)[0],
          j = d.createElement(s),
          dl = l != "dataLayer" ? "&l=" + l : "";
        j.async = true;
        j.src = "https://www.googletagmanager.com/gtm.js?id=" + i + dl;
        f.parentNode.insertBefore(j, f);
      })(window, document, "script", "dataLayer", "GTM-KWM6TSC9");
    `}
    />
  </head>
  <body class="font-primary">
    {/* Google tag - analytics */}
    <noscript>
      <iframe
        src="https://www.googletagmanager.com/ns.html?id=GTM-PMLFF7CX"
        height="0"
        width="0"
        style="display:none;visibility:hidden"></iframe>
    </noscript>
    {/* Google tag - consent */}
    <noscript>
      <iframe
        src="https://www.googletagmanager.com/ns.html?id=GTM-KWM6TSC9"
        height="0"
        width="0"
        style="display:none;visibility:hidden"></iframe>
    </noscript>
    <Header client:load />
    <slot />
    <Footer client:load />
  </body>
</html>
